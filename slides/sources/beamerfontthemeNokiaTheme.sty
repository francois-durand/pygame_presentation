\mode<presentation>

% If you want to specialize the font's folder and/or use the custom fonts
% Use the following command in the tex file and detail the path where to look for Nokia  fonts:
%\FontsFolder{/usr/share/fonts/}
% Only Nokia fonts are supported

%By default it will look for the fonts inside your system
\newcommand\FontsFolder{}%\beamer@themelocation/Fonts/}

\setmainfont[Path=\FontsFolder,%NormalFont = NokiaPureText-Light.ttf,
 BoldFont = NokiaPureText-Bold.ttf]{NokiaPureText-Light.ttf}

\setsansfont[Path=\FontsFolder,%NormalFont = NokiaPureText-Light.ttf,
 BoldFont = NokiaPureText-Bold.ttf]{NokiaPureText-Light.ttf}

%% definitions for fonts of the different elements
% You can add the custom ones here by creating a new font family as following
% Note that Path may be omitted if the font is already installed
%\newfontfamily{\NameYourFontFamily}[Path=path_here]{CustomFont.ttf}

\newfontfamily{\NokiaTitle}[Path=\FontsFolder]{NokiaPureHeadline_Ultralight.ttf}
\newfontfamily{\NokiaHeadLight}[Path=\FontsFolder]{NokiaPureHeadline_Light.ttf}
\newfontfamily{\NokiaTextLight}[Path=\FontsFolder]{NokiaPureText-Light.ttf}
\newfontfamily{\NokiaPureTextBold}[Path=\FontsFolder]{NokiaPureText-Bold.ttf}
\newfontfamily{\NokiaPureHeadlineBold}[Path=\FontsFolder]{NokiaPureHeadline_Bold.ttf}
\newfontfamily{\NokiaPureHeadlineExtraBold}[Path=\FontsFolder]{NokiaPureHeadline_ExtraBold.ttf}
\newfontfamily{\NokiaPureHeadlineRegular}[Path=\FontsFolder]{NokiaPureHeadline_Regular.ttf}
\newfontfamily{\NokiaPureTextMedium}[Path=\FontsFolder]{NokiaPureText-Medium.ttf}
\newfontfamily{\NokiaPureTextRegular}[Path=\FontsFolder]{NokiaPureText-Regular.ttf}
               
%\fontsize{font size}{baseline skip}
\setbeamerfont{title}{family=\NokiaTitle, size = \fontsize{32}{30}}%\Large} 
\setbeamerfont{institute}{family=\NokiaTextLight, size = \fontsize{14}{15}}%\footnotesize}
\setbeamerfont{subtitle}{family=\NokiaHeadLight, size = \large}
\setbeamerfont{author}{family=\NokiaTextLight, size = \fontsize{14}{15}}%\normalsize}
\setbeamerfont{date}{family=\NokiaTextLight, size = \footnotesize}
\setbeamerfont{footer}{family=\NokiaTextLight, size = \fontsize{5}{5}}
\setbeamerfont{title_frame}{family=\NokiaHeadLight, size = \fontsize{15}{17}}
\setbeamerfont{subtitle_frame}{family=\NokiaHeadLight, size = \fontsize{10}{11}}
\setbeamerfont{resumepanel}{family=\NokiaPureTextBold, size = \fontsize{10}{12}}%, series=\bf}
\setbeamerfont{normal text}{family=\NokiaTextLight, size = \normalsize}

% itemize font
\setbeamerfont{itemize/enumerate body}{family=\NokiaTextLight,size={\fontsize{11}{14}},series = \normalfont}
\setbeamerfont{itemize/enumerate subbody}{family=\NokiaTextLight,size={\fontsize{10}{13}},series = \normalfont}
\setbeamerfont{itemize/enumerate subsubbody}{family=\NokiaTextLight,size={\fontsize{8}{10}},series = \normalfont}

% block font
%\setbeamerfont{block %title}{family=\NokiaHeadLight,size=\fontsize{10}{10}}\setbeamerfont{block %body}{family=\NokiaPureTextBold,size=\fontsize{6.5}{6.5}}

\setbeamerfont{block title}{family=\NokiaPureTextBold,size=\fontsize{13}{13}}\setbeamerfont{block body}{family=\NokiaTextLight,size=\fontsize{11}{11}}


\setbeamerfont{normaltext}{family=\NokiaTextLight,size=\fontsize{12}{12}}
\setbeamerfont{structure}{family=\NokiaTextLight,size=\fontsize{12}{12}}
\mode<all>
