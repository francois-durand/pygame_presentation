\mode<presentation>

\setbeamertemplate{frametitle}
{
  \begin{minipage}[c][0.9\beamer@height][c]{\textwidth}
    \usebeamercolor[fg]{title}\usebeamerfont{title_frame}\strut{}\insertframetitle\par
    \usebeamercolor[fg]{Nokia_framesubtitle}\usebeamerfont{subtitle_frame}\strut{}\insertframesubtitle\par
  \end{minipage}
\vspace{-1.5cm}
}

% Useful for 3-column slides for Marcus
\newcommand\ResumePanel[3]
{
  % Draw a rectangle with a resume line
  \begin{textblock*}{\paperwidth}(#2,#3)
    \begin{beamercolorbox}[ht=2.5ex,wd=\paperwidth,dp=1ex]{resumepanel}
      \begin{minipage}[c][2ex][c]{\paperwidth}
        \centering
        \usebeamerfont{resumepanel}{#1}
      \end{minipage}
    \end{beamercolorbox}
  \end{textblock*}
}

\mode<all>
